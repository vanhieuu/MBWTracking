{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/@types/react"],
      "@assets/*": ["./src/app/assets/*"],
      "@common": ["src/app/common/index.ts"],
      "@animated": ["./src/app/common/animated/index"],
      "@config/*": ["./src/app/config/*"],
      "@features/*": ["./src/app/screens/*"],
      "@components": ["./src/app/library/components/index"],
      "@utils": ["./src/app/library/utils/index"],
      "@library/*": ["./src/app/library/*"],
      "@model/*": ["./src/app/model/*"],
      "@navigation/*": ["./src/app/navigation/*"],
      "@store/*": ["./src/app/store/*"],
      "@theme": ["./src/app/themes/index"],
      "@theme/*": ["./src/app/themes/*"],
      "@transition": ["./src/app/transition/index"],
      "@app_redux/*": ["./src/app/store/app_redux/*"],
      "@constance": ["./src/app/constance/index"],
      "@saga": ["./src/app/saga/*"],
      "@api":["./src/app/store/api/index"]
    }
  },
  
  "include": ["src", "declaration.d.ts", "reactnative.d.ts"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"],
}
